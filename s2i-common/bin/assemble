#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail

shopt -s dotglob
echo "---> Installing application source ..."
mv /tmp/src/* ./ 2>/dev/null || true

mkdir -p /silo/mysql
mv /var/lib/mysql/data /silo/mysql
ln -s /silo/mysql/data /var/lib/mysql/data

# Fix source directory permissions
/usr/libexec/fix-permissions ./
/usr/libexec/fix-permissions /silo
